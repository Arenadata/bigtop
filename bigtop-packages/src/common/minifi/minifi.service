[Unit]
Description=Apache MiNiFi
After=syslog.target network.target

[Service]
User=minifi
Type=forking
#Run ExecStartPre with root-permissions
PermissionsStartOnly=true
ExecStartPre=/bin/mkdir -p /var/run/minifi
ExecStartPre=/bin/chown -R minifi:minifi /var/run/minifi
ExecStart=/usr/lib/minifi/bin/minifi.sh start
ExecStop=/usr/lib/minifi/bin/minifi.sh stop

[Install]
WantedBy=multi-user.target
